{{import_globals}}

<div class="menu-item__inner deltaboxmenu-item__inner {{#if _isLocked}}is-locked{{/if}}">

  {{#if _graphic.src}}
  <div class="menu-item__image-container deltaboxmenu-item__image-container">

    <button class="menu-item__image deltaboxmenu-item__image js-btn-click{{#unless _deltaBoxMenu._graphic.hover}} item-states-css{{/unless}}{{#if _isVisited}} is-visited{{/if}}{{#if _isLocked}} is-locked{{/if}}" aria-hidden="true"{{#if _isLocked}} disabled="disabled"{{/if}}>
      <img src="{{_graphic.src}}" class="image-default" aria-hidden="true">
      <img src="{{#if _deltaBoxMenu._graphic.hover}}{{_deltaBoxMenu._graphic.hover}}{{else}}{{_graphic.src}}{{/if}}" class="image-hover" aria-hidden="true">
      <img src="{{#if _deltaBoxMenu._graphic.visited}}{{_deltaBoxMenu._graphic.visited}}{{else}}{{_graphic.src}}{{/if}}" class="image-visited" aria-hidden="true">
      <img src="{{#if _deltaBoxMenu._graphic.locked}}{{_deltaBoxMenu._graphic.locked}}{{else}}{{_graphic.src}}{{/if}}" class="image-locked" aria-hidden="true">
    </button>

  </div>
  {{/if}}

  <div class="menu-item__details deltaboxmenu-item__details">
    <div class="menu-item__details-inner deltaboxmenu-item__details-inner">

      {{#if displayTitle}}
      <div class="menu-item__title deltaboxmenu-item__title">
        <div class="js-heading" data-a11y-heading-type="menuItem"></div>

        <div class="menu-item__title-inner deltaboxmenu-item__title-inner accessible-text-block" aria-hidden="true">
          {{{compile displayTitle}}}
        </div>
      </div>
      {{/if}}

      {{#if _graphic.alt}}{{a11y_aria_image _graphic.alt}}{{/if}}

      {{#if body}}
      <div class="menu-item__body deltaboxmenu-item__body">
        <div class="menu-item__body-inner deltaboxmenu-item__body-inner">
          {{{compile body}}}
        </div>
      </div>
      {{/if}}

      <div class="menu-item__progress deltaboxmenu-item__progress js-menu-item-progress">
        {{!-- Menu item progress bar will render in here --}}
      </div>

      <div class="menu-item__button-container deltaboxmenu-item__button-container">
        <button class="btn-text menu-item__button deltaboxmenu-item__button js-btn-click{{#if _isVisited}} is-visited{{/if}}{{#if _isLocked}} is-locked{{/if}}" aria-label="{{#if _isVisited}}{{_globals._accessibility._ariaLabels.visited}}{{/if}} {{linkText}}"{{#if _isLocked}} disabled="disabled"{{/if}}>
          {{#if _isLocked}}
          {{{_deltaBoxMenu.linkLockedText}}}
              {{else}}
              {{#if _isVisited}}
                {{{_deltaBoxMenu.linkVisitedText}}}
              {{else}}
                {{{linkText}}}
              {{/if}}
          {{/if}}
        </button>
      </div>

      {{#if duration}}
      <div class="menu-item__duration deltaboxmenu-item__duration">
        <div class="menu-item__duration-inner deltaboxmenu-item__duration-inner">
          {{{_deltaBoxMenu.durationLabel}}} {{{duration}}}
        </div>
      </div>
      {{/if}}
    </div>
  </div>


</div>
