{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "$ref": "http://localhost/plugins/content/contentobject/model.schema",
  "globals": {
    "ariaRegion": {
      "type": "string",
      "required": true,
      "default": "Menu",
      "inputType": "Text",
      "validators": []
    },
    "durationLabel": {
      "type": "string",
      "required": true,
      "default": "Duration:",
      "inputType": "Text",
      "validators": []
    },
    "menuItem": {
      "type": "string",
      "required": true,
      "default": "Menu item.",
      "inputType": "Text",
      "validators": []
    },
    "menuEnd": {
      "type": "string",
      "required": true,
      "default": "You have reached the end of the menu.",
      "inputType": "Text",
      "validators": []
    }
  },
  "properties": {
    "pluginLocations": {
      "type":"object",
      "required":true,
      "properties":{
        "config": {
          "type":"object"
        },
        "course": {
          "type":"object"
        },
        "contentobject": {
          "type":"object",
          "properties": {
            "_deltaBoxMenu": {
              "type": "object",
              "required": false,
              "properties": {
                "_graphic": {
                  "type":"object",
                  "required":false,
                  "title": "Menu Graphic",
                  "properties":{
                    "src": {
                      "type":"string",
                      "required":false,
                      "default": "",
                      "inputType": "Asset:image",
                      "validators": [],
                      "help": "Image displayed for this menu item"
                    },
                    "alt": {
                      "type":"string",
                      "required":false,
                      "default": "",
                      "inputType": "Text",
                      "validators": [],
                      "help": "Alternative text for this image"
                    }
                  }
                },
                "_lockType": {
                  "type":"string",
                  "required":false,
                  "enum": ["sequential", "unlockFirst", "lockLast", "custom"],
                  "default": "sequential",
                  "title": "Menu Locking",
                  "inputType": {"type": "Select", "options":["sequential", "unlockFirst", "lockLast", "custom"]},
                  "validators": []
                },
                "linkLockedText": {
                  "type": "string",
                  "required": false,
                  "default": "",
                  "inputType": "Text",
                  "validators": [],
                  "help": "This is the instruction text"
                },
                "linkText": {
                  "type": "string",
                  "required": false,
                  "default": "",
                  "inputType": "Text",
                  "validators": []
                },
                "linkVisitedText": {
                  "type": "string",
                  "required": false,
                  "default": "",
                  "inputType": "Text",
                  "validators": []
                },
                "durationLabel": {
                  "type": "string",
                  "required": false,
                  "default": "",
                  "inputType": "Text",
                  "validators": []
                },
                "duration": {
                  "type": "string",
                  "required": false,
                  "default": "",
                  "inputType": "Text",
                  "validators": []
                }
              }
            }
          }
        },
        "article": {
          "type":"object"
        },
        "block": {
          "type":"object"
        },
        "component": {
          "type":"object"
        }
      }
    }
  }
}
